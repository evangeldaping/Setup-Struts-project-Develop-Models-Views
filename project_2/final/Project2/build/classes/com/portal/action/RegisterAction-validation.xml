<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC   
        "-//Apache Struts//XWork Validator Definition 1.0.3//EN"   
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>

	<validator type="requiredstring">
		<param name="fieldName">fname</param>
		<message>First Name is required</message>
	</validator>

	<validator type="requiredstring">
		<param name="fieldName">lname</param>
		<message>Last Name is required</message>
	</validator>

	<validator type="requiredstring">
		<param name="fieldName">role</param>
		<message>Role is required</message>
	</validator>

	<field name="email">
		<field-validator type="requiredstring">
			<message>Email is required</message>
		</field-validator>
		<field-validator type="email">
			<message>Must provide a valid email. Example: abc@gmail.com</message>
		</field-validator>
	</field>

	<validator type="requiredstring">
		<param name="fieldName">uname</param>
		<message>User Name is required</message>
	</validator>
	
		<validator type="requiredstring">
		<param name="fieldName">gender</param>
		<message>Gender is required</message>
	</validator>

</validators>  